<Project Sdk="Microsoft.NET.Sdk">

    <!-- MSBuild project settings -->
    <PropertyGroup>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
    </PropertyGroup>

    <!-- NuGet -->
    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <PackageId>bottlenoselabs.MSBuild.Tools</PackageId>
        <RepositoryUrl>https://github.com/bottlenoselabs/msbuild-tools</RepositoryUrl>
        <PackageDescription>MSBuild extensions and settings used for all C# projects at Bottlenose Labs Inc.</PackageDescription>
    </PropertyGroup>

    <!-- Include all content -->
    <ItemGroup>
        <Content Include="$(MSBuildThisFileDirectory)/**/*">
            <PackagePath>content/</PackagePath>
            <Pack>true</Pack>
            <PackageFlatten>false</PackageFlatten>
            <PackageCopyToOutput>true</PackageCopyToOutput>
        </Content>
    </ItemGroup>

</Project>
