<Project>

  <!-- NuGet -->
  <PropertyGroup>
    <PackageId>$(Company).$(AssemblyName)</PackageId>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(PackageIcon)' == '' ">
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconBottlenoseLabs>true</PackageIconBottlenoseLabs>
  </PropertyGroup>
  <ItemGroup Condition=" '$(PackageIconBottlenoseLabs)' != '' ">
    <Content Update="$(MSBuildThisFileDirectory)/images/icon.png" PackagePath="icon.png" Link="" />
  </ItemGroup>

</Project>