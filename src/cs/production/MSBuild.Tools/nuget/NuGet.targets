<Project>

  <!-- NuGet -->
  <PropertyGroup>
    <PackageId>$(Company).$(AssemblyName)</PackageId>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(PackageIcon)' == '' ">
    <PackageIcon>icon.png</PackageIcon>
    <_PackageIcon>true</_PackageIcon>
  </PropertyGroup>
  <ItemGroup Condition=" '$(_PackageIcon)' != '' ">
    <Content Update="$(MSBuildToolsContentDirectoryPath)/icon.png">
      <Pack>true</Pack>
      <PackagePath>icon.png</PackagePath>
    </Content>
  </ItemGroup>

</Project>